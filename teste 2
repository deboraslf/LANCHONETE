    <script>
        // Simples funcionalidade de filtro por categoria
        document.querySelectorAll('.category-btn').forEach(button => {
            button.addEventListener('click', function() {
                document.querySelectorAll('.category-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                this.classList.add('active');
                
                // Em uma implementação real, aqui seria o código para filtrar os itens
                // por categoria. Estou apenas simulando o comportamento.
                alert(`Categoria selecionada: ${this.textContent}`);
            });
        });
    </script>
